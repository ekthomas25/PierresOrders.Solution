@using PierresOrders.Models;

<h1>Vendor Order History:</h1>

<ul>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Date - @order.Title</li>
}
</ul>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new Order</a></p>
<p><a href='/vendors'>Return to Vendors list</a></p>
<p><a href='/'>Return to Homepage</a></p>