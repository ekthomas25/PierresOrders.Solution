@using PierresOrders.Models;

<h1>Vendors:</h1>

@if (@Model.Count == 0)
{
  <h3>Pierre! You haven't added any vendors yet.</h3>
}

@foreach (Vendor vendor in Model)
{
  <h3><a href="/vendors/@vendor.Id">@vendor.Name</a></h3>
  <h4>@vendor.Description</h4>
}

<p><a href="/">Back to Homepage</a></p>
<p><a href="/vendors/new">Add a Vendor</a></p>