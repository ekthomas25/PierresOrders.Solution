@using PierresOrders.Models;

@{
  Layout = "_Layout";
}

<div class="container">
  <h2>Vendors:</h2>
  <hr>

  @if (@Model.Count == 0)
  {
    <h3>Mon dieu, Pierre! You haven't added any vendors yet.</h3>
  }

  @foreach (Vendor vendor in Model)
  {
    <div class="vendor">
      <h3><a href="/vendors/@vendor.Id">@vendor.Name</a></h3>
      <h4>@vendor.Description</h4>
    </div>
  }

  <p><a href="/vendors/new" class="btn btn-outline-info">Add a Vendor</a></p>
  <p><a href="/" class="btn btn-outline-secondary">Back to Homepage</a></p>
</div>